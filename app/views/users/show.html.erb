<p id="notice"><%= notice %></p>

<p>

  <h1><%= @user.username %></h1>
</p>

<%= render "pictures/form", locals:{ picture: @picture }%>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.pictures.each do |photo| %>
      <tr>
        <td><%= image_tag photo.url, class: "image_resize"%></td>
      </tr>
    <% end %>
  </tbody>
</table>





